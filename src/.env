# CodePromptu Environment Configuration
# Copy this to .env.local and customize for your environment

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
POSTGRES_DB=codepromptu
POSTGRES_USER=codepromptu_user
POSTGRES_PASSWORD=codepromptu_pass

# Redis Configuration
REDIS_HOST=cache
REDIS_PORT=6379

# Application Ports
GATEWAY_PORT=8080
API_PORT=8081
PROCESSOR_PORT=8082
WORKER_PORT=8084
CONFIG_PORT=8888
UI_PORT=3000
MONITORING_PORT=3001

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CODEPROMPTU=DEBUG

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=86400

# Feature Flags
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true
